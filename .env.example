# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=strong_admin_password_here

# Node Configuration
RABBITMQ_NODENAME=rabbit@localhost
RABBITMQ_NODE_PORT=5672
RABBITMQ_DIST_PORT=25672

# Memory Configuration
RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.75
RABBITMQ_VM_MEMORY_HIGH_WATERMARK_PAGING_RATIO=0.5

# Disk Configuration
RABBITMQ_DISK_FREE_LIMIT_ABSOLUTE=2GB
RABBITMQ_DISK_FREE_LIMIT_RELATIVE=2.0

# Cluster Configuration
RABBITMQ_CLUSTER_PARTITION_HANDLING=autoheal
RABBITMQ_CLUSTER_FORMATION_PEER_DISCOVERY_BACKEND=classic_config

# Management Plugin
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_MANAGEMENT_USERNAME=admin
RABBITMQ_MANAGEMENT_PASSWORD=strong_admin_password_here

# Logging
RABBITMQ_LOGS=/var/log/rabbitmq/rabbit.log
RABBITMQ_SASL_LOGS=/var/log/rabbitmq/rabbit-sasl.log
RABBITMQ_LOG_LEVEL=info

# SSL/TLS Configuration (uncomment to enable)
# RABBITMQ_SSL_LISTENERS_DEFAULT_SSL_PORT=5671
# RABBITMQ_SSL_CERTFILE=/etc/rabbitmq/ssl/cert.pem
# RABBITMQ_SSL_KEYFILE=/etc/rabbitmq/ssl/key.pem
# RABBITMQ_SSL_CACERTFILE=/etc/rabbitmq/ssl/cacert.pem

# Prometheus Metrics
RABBITMQ_PROMETHEUS_PORT=15692

# Virtual Hosts
RABBITMQ_DEFAULT_VHOST=/microservices

# Connection Limits
RABBITMQ_CONNECTION_MAX=1000
RABBITMQ_CHANNEL_MAX=1000

# Message Configuration
RABBITMQ_DEFAULT_QUEUE_TYPE=classic
RABBITMQ_MESSAGE_TTL=3600000
RABBITMQ_QUEUE_TTL=7200000

# Environment
TZ=America/Sao_Paulo
ENVIRONMENT=production